{
  "compilerOptions": {
    "sourceMap": false,
    "experimentalDecorators": true,
    "module": "ES6",
    "target": "ES5",
    "jsx": "react",
    "lib": [
      "ESNext",
      "DOM",
      "ES2015",
      "ES2016",
      "DOM.Iterable"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": "../../temp/",
    "moduleResolution": "node",
    "typeRoots": [
      "../../source/typings",
      "../../node_modules/@types"
    ],
    "downlevelIteration": true,
  },
  "include": [
    "../../temp/**/*"
  ],
  "exclude": [
    "../../temp/**/__tests__/**/*"
  ]
}
